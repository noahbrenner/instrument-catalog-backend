{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "isolatedModules": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "#db/*": ["src/db/*"],
      "#shared/*": ["src/shared/*"],
      "#server": ["src/server.ts"]
    },
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "migrate.ts", "*.ts"]
}
