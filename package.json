{
  "name": "instrument-catalog-backend",
  "description": "The backend for a simple wiki-ish app for sharing musical instrument descriptions",
  "author": "Noah Brenner",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --verbose",
    "lint:lint": "eslint --ignore-path .gitignore .",
    "lint:types": "tsc --noEmit",
    "lint:format": "prettier --check --ignore-path .gitignore .",
    "lint": "npm run lint:lint && npm run lint:types && npm run lint:format",
    "format": "prettier --write --ignore-path .gitignore .",
    "build": "node build.js",
    "start": "node -r module-alias/register ./dist --env=production",
    "start:dev": "nodemon"
  },
  "main": "dist/index.js",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "homepage": "https://github.com/noahbrenner/instrument-catalog-backend#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noahbrenner/instrument-catalog-backend.git"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@daos": "dist/daos",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@server": "dist/server"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^3.23.3",
    "http-status-codes": "^1.4.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/helmet": "0.0.47",
    "@types/jest": "^26.0.10",
    "@types/jsonfile": "^6.0.0",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.27",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-import": "^2.22.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.8",
    "jest": "^26.4.2",
    "jsonfile": "^6.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  }
}
